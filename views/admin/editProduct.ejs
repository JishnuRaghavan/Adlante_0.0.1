<script>
  const genderMale  = document.getElementById('inlineRadio1');
  const genderFemale= document.getElementById('inlineRadio2');
  if('<%= product.gender.toString() %>' === 'Male'){
    genderMale.checked = 'true';
  }
  else{
    genderFemale.checked  = true;
  }

</script>
<script>
  const regularPriceInput = document.getElementById('regularPrice');
  const salePriceInput = document.getElementById('salePrice');
  const submitButton = document.getElementById('submitButton');

  function checkInputValues() {
    const regularPrice = parseFloat(regularPriceInput.value);
    const salePrice = parseFloat(salePriceInput.value);
    
    submitButton.disabled = regularPrice <= 0 || salePrice <= 0;
  }

  regularPriceInput.addEventListener('input', checkInputValues);
  salePriceInput.addEventListener('input', checkInputValues);

  checkInputValues();

</script>
<script>
  if('<%= alertMessage %>' !== ""){
    alert('<%= alertMessage %>');
  }
</script>
<script>
  function deleteOneImage(index) {
  const form = document.getElementById('ImageForm'); // Make sure the form ID is correct
  const input = document.createElement('input');

  input.type = 'hidden';
  input.name = 'deleteProductId';
  input.value = index;

  form.appendChild(input);

  form.action = "/admin/deleteOneImage"; // Update the action to deleteOneImage
  form.method = "post"; // Ensure the method is set to post
  form.submit();
}
</script>
<script>
  const deleteButton = document.getElementById('deleteButton');
  const galleryImageLength = '<%= product.galleryimage.length %>';
  
  console.log('Gallery Image Length:', galleryImageLength);

  if (galleryImageLength === '1') {
    deleteButton.style.display = "none";
  }
</script>


