                          <select name="brand" class="form-select" aria-label="Default select example">
                            <% brands.forEach((brand)=> { %>
                              <option value="<%= brand.title %>" <%= product.brand === brand.title ? 'selected' : '' %>><%= brand.title %></option>
                            <% }) %>
                          </select>
                        </div>
                        <!--tag-->
                        <div class="mb-3">
                          <label class="form-label">Tags
                          </label>
                          <input name='tags' value="<%= product.tag.length > 0 ? product.tag[0] : '' %>" class="form-control w-100">
                        </div>
                      </div>
                      <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                        update
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
                <!-- card -->
                <form id="ImageForm" action="/admin/productImageUpdate" method="post" enctype="multipart/form-data">
                  <div class="card mb-4">
                    <!-- card body -->
                    <div class="card-body">
                      <div>
                        <div class="card mt-5">
                          <div class="card-body p-5">
                            <div class="mb-5">
                              <h2 class="mb-0 fs-exact-18">Images</h2>
                            </div>
                          </div>
