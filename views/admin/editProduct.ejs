  <div id="app-content">
    <% if(typeof product !== 'undefined') { %>
    <!-- Container fluid -->
      <div class="app-content-area">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-12">
              <!-- Page header -->
              <div class="mb-5">
                <h3 class="mb-0 ">Edit Product</h3>
              </div>
            </div>
          </div>
          <div>
            <!-- row -->
            <div class="row">
              <div class="col-lg-4 col-12">
                <form action="/admin/firstColumnChanges" method="post">
                  <!-- card -->
                  <div class="card mb-4">
                    <!-- card body -->
                    <div class="card-body">
                      <!-- input -->
                      <label class="form-label" for="flexSwitchStock">No. of Stock</label>
                      <input value="<%= product.stock %>" name="stock" class="form-control" type="number" id="flexSwitchStock" required>
                      <!-- input -->
                      <div>
                        <!-- input -->
                        <div class="mb-3">
                          <label class="form-label" id="productSKU">Gender</label><br>
                          <div class="form-check form-check-inline">
                            <input name="gender" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1"
                              value="Male">
                            <label class="form-check-label" for="inlineRadio1">Male</label>
                          </div>
                          <!-- input -->
                          <div class="form-check form-check-inline">
                            <input name="gender" class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2"
                              value="Female">
                            <label class="form-check-label" for="inlineRadio2">Female</label>
                          </div>
                        </div>
                        <!-- input category and subcategory -->
                        <label class="form-label" for="category">Category</label>
                        <div class="d-flex align-items-center mt-2">
                          <!-- Dropdown and Confirm button side by side -->
                          <select class="form-select" id="categorySelect" name="category">
                            <% if (typeof categories !== 'undefined') { %>
                              <% categories.forEach(function(category) { %>
                                <option value="<%= category.maincategory %>" <% if (product.category === category.maincategory) { %> selected <% } %>><%= category.maincategory %></option>
                              <% }); %>
                            <% } %>
                          </select>                          
                        </div>
                        <label class="form-label" for="subcategory">Subcategory</label>
                        <div class="d-flex align-items-center mt-2">
                          <!-- Dropdown and Confirm button side by side -->
                          <div class="d-flex align-items-center mt-2">
                            <!-- Dropdown and Confirm button side by side -->
                            <select class="form-select" id="subcategorySelect" name="subcategory">
                              <% if (typeof categories !== 'undefined') { %>
                                <% categories.forEach((category) => { %>
                                  <% if (typeof category.subcategory !== 'undefined') { %>
                                    <% category.subcategory.forEach((subcategory) => { %>
                                      <option value="<%= subcategory.name %>" <%= product.subcategory === subcategory.name ? 'selected' : '' %>><%= subcategory.name %></option>
                                    <% }); %>
                                  <% } %>
                                <% }); %>
                              <% } %>
                            </select>
                            
                          </div>                          
                        </div>                        
                        <div class="mb-3">
                          <div class="d-flex justify-content-between">
                            <label class="form-label">Size : <span id="productSize" style="color: red;"><%= product.size %></span></label>
                          </div>
                          <!-- select menu for Size -->
                          <select class="form-select" aria-label="Size" name="size">
                            <option value="small">S</option>
                            <option value="medium">M</option>
                            <option value="large">L</option>
                            <option value="xl">XL</option>
                            <option value="xxl">XXL</option>
                            <option value="xxxl">XXXL</option>
                          </select>
                        </div>
    
                        <div class="mb-3">
                          <div class="d-flex justify-content-between">
                            <label class="form-label">specification</label>
                          </div>
                          <div class="form-control">
                            <div class="form-group mb-3">
                              <label for="width">Width:</label>
                              <input value="<%= product.width %>" class="form-control" type="number" name="width" id="width" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="height">Height:</label>
                              <input value="<%= product.height %>" class="form-control" type="number" name="height" id="height" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="depth">Depth:</label>
                              <input value="<%= product.depth %>" class="form-control" type="number" name="depth" id="depth" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="weight">Weight:</label>
                              <input value="<%= product.weight %>" class="form-control" type="number" name="weight" id="weight" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="width">Quality checking :</label>
                              <input class="form-control" type="text" value="<%= product.quality %>" name="quality" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="width">Freshness duration :</label>
                              <input class="form-control" type="text" value="<%= product.freshness %>" name="freshness" required>
                            </div>
                            <div class="form-group mb-3">
                              <label for="width">when packeting :</label>
                              <input class="form-control" type="text" name="packeting" value="<%= product.packeting %>" required>
                            </div>
                          </div>
                        </div>
                        <div class="d-grid">
                          <button type="submit" class="btn btn-primary">
                          Save changes
                          </button>
                        </div>
                      </div>
                    </div>
