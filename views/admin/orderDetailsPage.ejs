  <div id="app-content">
    <% if(typeof order !== 'undefined' && typeof user !== 'undefined' && typeof products !== 'undefined') { %>
    <div class="app-content-area">
      <div class="sa-app sa-app--desktop-sidebar-shown sa-app--mobile-sidebar-hidden sa-app--toolbar-fixed">
        <div class="sa-app__content">
          <div id="top" class="sa-app__body">
            <div class="mx-sm-2 px-2 px-sm-3 px-xxl-4 pb-6">
              <div class="container container--max--xl">
                <div class="py-5">
                  <div class="row g-4 align-items-center">
                    <div class="col">
                      <h1 class="h3 m-0"><%= order.orderId %></h1>
                    </div>
                  </div>
                </div>
                <div class="sa-page-meta mb-5">
                  <div class="sa-page-meta__body">
                    <div class="sa-page-meta__list">
                      <div class="sa-page-meta__item"><%= order.date %></div>
                      <div class="sa-page-meta__item"><%=order.items.length %> items</div>
                      <div class="sa-page-meta__item">Total <%= order.subtotal %> &#8377; </div>
                      <div class="sa-page-meta__item d-flex align-items-center fs-6"><span class="badge badge-sa-success me-2">payment <%= order.paymentStatus %></span><span class="badge badge-sa-warning me-2"><%= order.orderStatus %></span></div>
                    </div>
                  </div>
                </div>
                <div class="sa-entity-layout" data-sa-container-query="{&quot;920&quot;:&quot;sa-entity-layout--size--md&quot;}">
                  <div class="sa-entity-layout__body">
                    <div class="sa-entity-layout__main">
                      <div class="sa-card-area">
                        <textarea class="sa-card-area__area" rows="2" placeholder="Notes about order"></textarea>
                        <div class="sa-card-area__card">
                          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                          </svg>
                        </div>
                      </div>
                      <div class="card mt-5">
                        <div class="card-body px-5 py-4 d-flex align-items-center justify-content-between">
                          <h2 class="mb-0 fs-exact-18 me-4">Items</h2>
                        </div>
                        <div class="table-responsive">
                          <table class="sa-table">
                            <tbody>
                              <% order.items.forEach((item)=>{ %>
                              <tr>
                                <td class="min-w-20x">
                                  <div class="d-flex align-items-center">
                                    <% products.forEach((product) => { %>
                                      <% if (product._id.toString() === item.productId) { %>
                                        <img src="/productimg/<%= product.defaultimage %>" class="me-4" width="40" height="40" alt=""/>
                                      <% } %>
                                    <% }) %>                                    
                                    <a href="app-product.html" class="text-reset"><%= item.title %></a>
                                  </div>
                                </td>
                                <td class="text-end">
                                  <div class="sa-price">
                                    <span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%= item.price %></span>
                                  </div>
                                </td>
                                <td class="text-end"><%= item.quantity %></td>
                                <td class="text-end">
                                  <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%= item.total %></span></div>
                                </td>
                              </tr>
                              <% }) %>
                            </tbody>
                            <tbody class="sa-table__group">
                              <tr>
                                <td colSpan="3">Subtotal</td>
                                <td class="text-end">
                                  <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%= itemTotal %></span></div>
                                </td>
                              </tr>
                              <tr>
                                <td colSpan="3">Store Credit</td>
                                <td class="text-end">
                                  <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%=order.discountValue %></span></div>
                                </td>
                              </tr>
                              <tr>
                                <td colSpan="3">
                                  Shipping
                                  <div class="text-muted fs-exact-13">via FedEx International</div>
                                </td>
                                <td class="text-end">
                                  <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer">50.00</span></div>
                                </td>
                              </tr>
                            </tbody>
                            <tbody>
                              <tr>
                                <td colSpan="3">Total</td>
                                <td class="text-end">
                                  <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%= order.subtotal %></span></div>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                      </div>
                      <div class="card mt-5">
                        <div class="card-body px-5 py-4 d-flex align-items-center justify-content-between">
                          <h2 class="mb-0 fs-exact-18 me-4">Transactions</h2>
                        </div>
                        <div class="table-responsive">
                          <table class="sa-table text-nowrap">
                            <tbody>
                              <tr>
                                <td>
                                  Payment
                                  <div class="text-muted fs-exact-13">via razorpay</div>
                                </td>
                                <td><%= order.date.toString().substring(0,15) %></td>
                                <td class="text-end">
                                  <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%= order.subtotal %></span></div>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                      </div>
                      <div class="card mt-5">
                        <div class="card-body px-5 py-4 d-flex align-items-center justify-content-between">
                          <h2 class="mb-0 fs-exact-18 me-4">Balance</h2>
                        </div>
                        <table class="sa-table">
                          <tbody class="sa-table__group">
                            <tr>
                              <td>Order Total</td>
                              <td class="text-end">
                                <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><%= order.subtotal %></span></div>
                              </td>
                            </tr>
                          </tbody>
                          <tbody class="sa-table__group">
                            <tr>
                              <td>Paid by customer</td>
                              <td class="text-end">
                                <div class="sa-price">
                                  <span class="sa-price__symbol">&#8377</span>
                                  <span class="sa-price__integer">
                                    <% if(order.paymentStatus === "success") { %>
                                      <%= order.subtotal %>
                                    <% } else { %>
                                      0
                                    <% } %>
                                  </span>
                                </div>                                
                              </td>
                            </tr>
                          </tbody>
                          <tbody>
                            <tr>
                              <td>Balance <span class="text-muted">(customer owes you)</span></td>
                              <td class="text-end">
                                <div class="sa-price"><span class="sa-price__symbol">&#8377;</span><span class="sa-price__integer"><% if(order.paymentStatus !== "success") { %>
                                  <%= order.subtotal %>
                                <% } else { %>
                                  0
                                <% } %></span></div>
                              </td>
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    <div style="margin: 20px;" class="sa-entity-layout__sidebar">
                      <div class="card">
                        <div class="card-body d-flex align-items-center justify-content-between pb-0 pt-4">
                          <h2 class="fs-exact-16 mb-0">Customer</h2>
                        </div>
                        <div class="card-body d-flex align-items-center pt-4">
                          <div class="sa-symbol sa-symbol--shape--circle sa-symbol--size--lg"><img src="images/customers/customer-1-40x40.jpg" width="40" height="40" alt=""/></div>
                          <div class="ms-3 ps-2">
                            <div class="fs-exact-14 fw-medium"><%= user.name %></div>
                          </div>
                        </div>
                      </div>
                      <div class="card mt-5">
                        <div class="card-body d-flex align-items-center justify-content-between pb-0 pt-4">
                          <h2 class="fs-exact-16 mb-0">Contact person</h2>
                        </div>
                        <div class="card-body pt-4 fs-exact-14">
                          <div><%= user.name %></div>
                          <div class="mt-1"><a href="#"><%= user.email %></a></div>
                          <div class="text-muted mt-1"><%= user.mobile %></div>
                        </div>
                      </div>
                      <div class="card mt-5">
                        <div class="card-body d-flex align-items-center justify-content-between pb-0 pt-4">
                          <h2 class="fs-exact-16 mb-0">Shipping Address</h2>
                        </div>
                        <div class="card-body pt-4 fs-exact-14"><%= order.userName %><br/><%= order.shippingAddress.houseName %><br/><%= order.shippingAddress.postOffice %><br/><%= order.shippingAddress.district %><br/><%= order.shippingAddress.pin %><br/></div>
                      </div>
                      <div class="card mt-5">
                        <div class="card-body d-flex align-items-center justify-content-between pb-0 pt-4">
                          <h2 class="fs-exact-16 mb-0">Billing Address</h2>
                        </div>
                        <div class="card-body pt-4 fs-exact-14"><%= order.userName %><br/><%= order.shippingAddress.houseName %><br/><%= order.shippingAddress.postOffice %><br/><%= order.shippingAddress.district %><br/><%= order.shippingAddress.pin %><br/></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</main>
